# Environment Variables
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/jobportal
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster.mongodb.net/jobportal

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_NAME=Job Portal
FROM_EMAIL=noreply@jobportal.com

# Job API Keys
# ZipRecruiter API (Get from https://www.ziprecruiter.com/publishers)
ZIPRECRUITER_API_KEY=your_ziprecruiter_api_key_here
# FindWork API (Get from https://findwork.dev/developers/)
FINDWORK_API_KEY=your_findwork_api_key_here

# Alternative Job APIs (No auth required)
ARBEITNOW_API_URL=https://arbeitnow.com/api/job-board-api
REMOTIVE_API_URL=https://remotive.com/api/remote-jobs

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173
